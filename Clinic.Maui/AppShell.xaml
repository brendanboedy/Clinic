<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Clinic.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Clinic.Maui"
    xmlns:views="clr-namespace:Clinic.Maui.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Clinic.Maui">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Appointments"
        ContentTemplate="{DataTemplate views:AppointmentView}"
        Route="Appointments" />

    <ShellContent
        Title="Patients"
        ContentTemplate="{DataTemplate views:PatientView}"
        Route="Patients" />

    <ShellContent
        Title="Physicians"
        ContentTemplate="{DataTemplate views:PhysicianView}"
        Route="Physicians" />

</Shell>
