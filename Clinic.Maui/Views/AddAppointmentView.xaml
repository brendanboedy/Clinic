<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Clinic.Maui.Views.AddAppointmentView"
             Title="Create New Appointment or Update Existing Appointment!">
    <VerticalStackLayout>
        <Label 
            Text="Add/Edit an Appointment!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Text="Patient:"/>
        <Label Text="{Binding Model.AssignedPatient.Name}"/>
        <Label Text="Physician:"/>
        <Label Text="{Binding Model.AssignedPhysician.Name}"/>
        <Label Text="Please Enter Appointment Date:"/>
        <DatePicker Date="{Binding Model.AppointmentDate}"/>
        <Label Text="Please Enter Appointment Start Time:"/>
        <TimePicker Time="{Binding Model.AppointmentTimeSpan}"/>
        <!-- invisible label to report error message for scheduling conflicts -->
        <Label 
            Text="Invalid Date/Time; Please ensure all Appointments are M-F, 9:00am - 5:00pm, non-conflicting."
            IsVisible="{Binding ErrorLabelVisibility}"
            HorizontalOptions="Center"/>
        <Button 
            Text="Add/Update Appointment"
            Clicked="addAppointmentClicked"/>
        <Button 
            Text="Cancel"
            Clicked="cancelClicked"/>
    </VerticalStackLayout>
</ContentPage>