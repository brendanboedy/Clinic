<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Clinic.Maui.Views.AddAppointmentView"
             Title="Create New Appointment or Update Existing Appointment!">
    <VerticalStackLayout>
        <Label 
            Text="Add/Edit an Appointment!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Text="Patient:"/>
        <Label Text="{Binding AssignedPatient.Name}"/>
        <Label Text="Physician:"/>
        <Label Text="{Binding AssignedPhysician.Name}"/>
        <Label Text="Please Enter Appointment Date:"/>
        <DatePicker Date="{Binding AppointmentDate}"/>
        <Label Text="Please Enter Appointment Start Time:"/>
        <TimePicker Time="{Binding AppointmentStartTime}"/>
        <Button 
            Text="Add/Update Appointment"
            Clicked="addAppointmentClicked"/>
        <Button 
            Text="Cancel"
            Clicked="cancelClicked"/>
    </VerticalStackLayout>
</ContentPage>