<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Clinic.Maui.Views.PatientView"
             Title="Patient Page"
             NavigatedTo="ContentPage_NavigatedTo">
    <VerticalStackLayout>
        <Label 
            Text="Listing Current Patients!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <ListView
            ItemsSource="{Binding Patients}"
            SelectedItem="{Binding SelectedPatient}">
            <!-- producing list view template -->
            <!-- each row is a 2-column grid with a label and buttons -->
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <!-- column one -->
                                <ColumnDefinition Width="5*"/>
                                <!-- column two -->
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label 
                                Text="{Binding Model.Display}"
                                Grid.Column="0"/>
                            <Grid Grid.Column="1">
                                <!-- seperate grid w 2 columns inside column 1 of outer grid -->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Button Text="Edit" 
                                    Grid.Column="0"
                                    Command ="{Binding EditCommand}"
                                    CommandParameter="{Binding}"/>
                                <Button Text="Delete" 
                                    Grid.Column="1"
                                    Command ="{Binding DeleteCommand}"
                                    Clicked="InlineDeleteClicked"
                                    CommandParameter="{Binding}"/>
                            </Grid>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!-- button to add new patient (new content page) -->
            <Button
                Grid.Column="0"
                Text="Add New Patient" 
                Clicked="clickedAddPatient"/>
            <!-- Button to Delete selected patient -->
            <Button
                Grid.Column="2"
                Text="Delete Selected Patient"
                Clicked="deleteClicked"/>
            <!-- Button to Edit selected patient -->
            <Button
                Grid.Column="1"
                Text="Edit Selected Patient"
                Clicked="editClicked"/>
        </Grid>
            <!-- button to go back to home screen -->
            <Button 
                Text="Back" 
                Clicked="clickedBack"/>
    </VerticalStackLayout>
</ContentPage>