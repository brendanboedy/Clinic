<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Clinic.Maui.Views.AddPatientView"
             Title="Create New Patient or Edit Existing Patient!"
             NavigatedTo="ContentPage_NavigatedTo">
    <VerticalStackLayout>
        <Label 
            Text="Add/Edit a Patient!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Text="Name"/>
        <Entry Text="{Binding Model.Name}"/>
        <Label Text="Date Of Birth"/>
        <DatePicker Date="{Binding Model.DateOfBirth}"/>
        <Label Text="Race (Optional)"/>
        <Entry Text="{Binding Model.Race}"/>
        <Label Text="Gender (Optional)"/>
        <Entry Text="{Binding Model.Gender}"/>
        <Label Text="Address (Optional)"/>
        <Entry Text="{Binding Model.Address}"/>
        <Label Text="Patient Notes (Optional)"/>
        <Entry Text="{Binding Model.Notes}"/>
        <Button Text="Add" Clicked="addClicked"/>
        <Button Text="Cancel" Clicked="cancelClicked"/>
    </VerticalStackLayout>
</ContentPage>