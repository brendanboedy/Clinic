<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Clinic.Maui.Views.AddPatientView"
             Title="Create New Patient">
    <VerticalStackLayout>
        <Label 
            Text="Add a Patient!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Text="Name"/>
        <Entry Text="{Binding Name}"/>
        <Label Text="Date Of Birth (YYYY/MM/DD)"/>
        <Entry Text="{Binding DateOfBirth}"/>
        <Label Text="Race (Optional)"/>
        <Entry Text="{Binding Race}"/>
        <Label Text="Gender (Optional)"/>
        <Entry Text="{Binding Gender}"/>
        <Label Text="Address (Optional)"/>
        <Entry Text="{Binding Address}"/>
        <Label Text="Patient Notes (Optional)"/>
        <Entry Text="{Binding Notes}"/>
        <Button Text="Add" Clicked="addClicked"/>
        <Button Text="Cancel" Clicked="cancelClicked"/>
    </VerticalStackLayout>
</ContentPage>